@model Capitulo02.Models.Departamento

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutIES.cshtml";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/font-awesome.min.css"
              asp-fallback-href="~/lib/font-awesome/css/all.css" asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
}

<div class="card-block">
    <div class="card-header text-white bg-secondary text-center h1">Exibindo um Departamento Existente</div>
    <div class="card-body">
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <br />
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fa fa-user-circle" aria-hidden="true"></i>
                    </span>
                </div>
                <input asp-for="Nome" class="form-control" disabled="disabled" />
            </div>
        </div>
    </div>
    <div class="card-footer bg-info text-center text-white">
        <form asp-action="Delete">
            <input type="hidden" asp-for="DepartamentoID" />
            <input type="submit" value="Remover Departamento" class="btn btn-light" />
            <a asp-action="Index" class="btn btn-info">Retornar a listagem</a>
        </form>
    </div>
</div>
