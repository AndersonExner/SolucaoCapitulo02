@model Modelo.Cadastros.Curso

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutIES.cshtml";
}

<div class="card-block">
    <div class="card-header text-white bg-secondary text-center h1">Alterando um instituição existente</div>
    <div class="card.body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CursoID" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartamentoID" class="control-label"></label>
                <select asp-for="DepartamentoID" class="form-control" asp-items="@ViewBag.Departamento"></select>
            </div>
            <div class="form-group text-center h3">
                <input type="submit" value="Atualizar Cruso" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Retornar à listagem de Cursos</a>
            </div>
        </form>
    </div>
</div>

@section ScriptPage {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
